{
  "name": "pex-dex",
  "version": "1.0.0",
  "description": "PEX - Professional Perpetual Exchange on PolkaVM",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install --omit=optional && cd frontend && npm install --omit=optional",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "forge build && npx hardhat compile",
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"npm run dev:node\" \"npm run dev:frontend\"",
    "dev:node": "npx hardhat node",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "npm run test:contracts && npm run test:frontend",
    "test:contracts": "npm run test:forge && npm run test:hardhat",
    "test:forge": "forge test",
    "test:hardhat": "npx hardhat test",
    "test:frontend": "cd frontend && npm run test",
    "test:coverage": "forge coverage && npx hardhat coverage",
    "deploy:local": "npx hardhat deploy --network localhost",
    "deploy:sepolia": "npx hardhat deploy --network sepolia",
    "deploy:mainnet": "npx hardhat deploy --network mainnet",
    "deploy:polkavm": "npx hardhat deploy --network polkavm_testnet",
    "verify:sepolia": "npx hardhat verify --network sepolia",
    "verify:mainnet": "npx hardhat verify --network mainnet",
    "clean": "npx hardhat clean && forge clean && cd frontend && npm run clean",
    "lint": "npm run lint:contracts && npm run lint:frontend",
    "lint:contracts": "forge fmt --check && npx solhint 'contracts/**/*.sol'",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "forge fmt && cd frontend && npm run format",
    "gas-report": "REPORT_GAS=true npx hardhat test",
    "size-contracts": "npx hardhat size-contracts",
    "flatten": "npx hardhat flatten",
    "export": "npx hardhat export --export-all deployments/all.json",
    "setup": "npm run install:all && npm run build:contracts",
    "start": "npm run dev",
    "postinstall": "command -v forge >/dev/null 2>&1 && forge install --no-commit || echo 'Skipping forge install (forge not found)'"
  },
  "keywords": [
    "defi",
    "dex",
    "perpetual",
    "trading",
    "polkavm",
    "ethereum",
    "smart-contracts",
    "solidity"
  ],
  "author": "PEX Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/pex-dex.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/pex-dex/issues"
  },
  "homepage": "https://github.com/your-org/pex-dex#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/solidity-analyzer-darwin-arm64": "0.1.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.8",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "ethers": "^6.14.0",
    "hardhat": "^2.26.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@polkadot/api": "^16.4.9",
    "@polkadot/keyring": "^13.5.7",
    "@polkadot/util": "^13.5.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "frontend"
  ],
  "private": true,
  "volta": {
    "node": "20.19.5",
    "yarn": "1.22.22"
  }
}
