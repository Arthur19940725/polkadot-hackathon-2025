{
  "name": "pex-contracts",
  "version": "1.0.0",
  "description": "PolkaVM Perpetual DEX Smart Contracts",
  "main": "index.js",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:verbose": "forge test -vvv",
    "test:gas": "forge test --gas-report",
    "coverage": "forge coverage",
    "clean": "forge clean",
    "fmt": "forge fmt",
    "lint": "solhint 'src/**/*.sol'",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:testnet": "forge script script/Deploy.s.sol --rpc-url $TESTNET_RPC_URL --broadcast --verify",
    "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url $MAINNET_RPC_URL --broadcast --verify",
    "verify": "forge verify-contract",
    "install:deps": "forge install",
    "update:deps": "forge update",
    "snapshot": "forge snapshot",
    "doc": "forge doc"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "defi",
    "perpetual",
    "dex",
    "polkavm",
    "orderbook"
  ],
  "author": "PEX Team",
  "license": "MIT",
  "devDependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "solhint": "^4.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pex-protocol/contracts"
  },
  "bugs": {
    "url": "https://github.com/pex-protocol/contracts/issues"
  },
  "homepage": "https://pex.finance"
}